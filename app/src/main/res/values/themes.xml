<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StatusSaverPro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0B0A0A</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Light Mode on -->
    <!-- Screen background if light mode is ON -->

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text colour if light mode is ON -->
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- CardView if light mode is ON -->
    <style name="CARD">
        <item name="android:background">#E4E3E3</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>